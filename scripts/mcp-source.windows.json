{
  "mcpServers": {
    "ms-docs": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "mcp-remote", "https://learn.microsoft.com/api/mcp"],
      "transport": "stdio"
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"],
      "transport": "stdio"
    },
    "playwright": {
      "command": "cmd",
      "args": ["/c", "npx", "@executeautomation/playwright-mcp-server"],
      "transport": "stdio"
    },
    "ado": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "@azure-devops/mcp",
        "ipsenergy",
        "--tenant",
        "72f988bf-86f1-41af-91ab-2d7cd011db47",
        "-d",
        "core",
        "work-items",
        "repositories",
        "pipelines",
        "wiki"
      ],
      "transport": "stdio"
    }
  }
}