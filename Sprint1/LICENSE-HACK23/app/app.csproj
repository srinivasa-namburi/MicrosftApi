  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Maps.Rendering" Version="1.0.0-beta.1" />
    <PackageReference Include="Azure.Maps.Search" Version="1.0.0-beta.3" />
    <PackageReference Include="Microsoft.SemanticKernel" Version="0.15.230531.5-preview" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="7.0.4" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="skills/reverseclassifier/skprompt.txt" />
    <None Remove="skills/actionplanner/skprompt.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="skills/reverseclassifier/skprompt.txt" />
    <EmbeddedResource Include="skills/actionplanner/skprompt.txt" />
  </ItemGroup>
  <ItemGroup>
    <None Include="appsettings.json;appsettings.development.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
