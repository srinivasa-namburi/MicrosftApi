@using ProjectVico.V2.Web.DocGen.Components.Layout
<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    <AuthorizeView>
        <Authorized>
            @if (!string.IsNullOrEmpty(context.User.Identity?.Name))
            {
                <MudNavLink Href="/docs" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ViewList">All Documents</MudNavLink>
                <MudNavGroup Title="New Document" Icon="@Icons.Material.Filled.Description">
                    <MudNavLink Href="/US.NuclearLicensing/generate">US Nuclear Licensing</MudNavLink>
                    <MudNavLink Href="/Belgium.NuclearLicensing.DSAR/generate">Belgium Nuclear Licensing</MudNavLink>
                </MudNavGroup>
                <MudNavLink Href="/ingest" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.CloudUpload">Ingest Files</MudNavLink>
                <MudNavLink Href="/copilot" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AssistantDirection">Nuclear Copilot</MudNavLink>
            }
        </Authorized>
    </AuthorizeView>
    <LogInOrOut />

</MudNavMenu>