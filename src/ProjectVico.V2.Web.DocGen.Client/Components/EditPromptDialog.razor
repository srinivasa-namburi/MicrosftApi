@inject IDocumentProcessApiClient DocumentProcessApiClient
@inject IDialogService DialogService

<MudDialog MaxWidth="MaxWidth.Medium">
    <TitleContent>
        <MudText Typo="Typo.h6">@((IsEditMode ? "Edit Prompt" : "Add Prompt"))</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="Prompt.ShortCode" Label="Short Code" Disabled="true" />
        <MudTextField @bind-Value="Prompt.Description" Label="Description" Disabled="true" />
        <MudTextField @bind-Value="Prompt.Text" Label="Text" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SavePrompt">Save</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public EventCallback OnPromptSaved { get; set; }
    [Parameter] public PromptInfo Prompt { get; set; } = new();
    [Parameter] public bool IsEditMode { get; set; }

    protected override void OnParametersSet()
    {
        // Validate that parameters are set correctly
        if (Prompt == null)
        {
            throw new InvalidOperationException("Prompt parameter is required.");
        }
    }

    private async Task SavePrompt()
    {
        if (IsEditMode)
        {
            await DocumentProcessApiClient.UpdatePromptAsync(Prompt);
        }
        else
        {
            await DocumentProcessApiClient.CreatePromptAsync(Prompt);
        }

        await OnPromptSaved.InvokeAsync();
        MudDialog.Close();
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}