		</Content>
		<Content Update="Pages\Home.razor">
		  <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<UpToDateCheckInput Remove="Layout\LogInOrOut.razor" />
	</ItemGroup>

	<ItemGroup>
		<_ContentIncludedByDefault Remove="Layout\LogInOrOut.razor" />
	</ItemGroup>

</Project>
