<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
		<StaticWebAssetProjectMode>Default</StaticWebAssetProjectMode>
	</PropertyGroup>

	<PropertyGroup>
		<!--<WasmNativeDebugSymbols>true</WasmNativeDebugSymbols>
		<WasmNativeStrip>false</WasmNativeStrip>-->
		<WasmProfilers>browser;</WasmProfilers>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Markdig" Version="0.37.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.4" />
		<PackageReference Include="Microsoft.AspnetCore.Components.WebAssembly.Authentication" Version="8.0.4" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.4" PrivateAssets="all" />
		<PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="8.0.4" />
		<PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
		<PackageReference Include="MudBlazor" Version="6.*" />
		<PackageReference Include="FluentValidation" Version="11.9.1" />
	</ItemGroup>

	<ItemGroup>
		<Folder Include="Pages\Ingest\" />
		<Folder Include="Pages\DocumentProcess\" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ProjectVico.V2.UI.Belgium.NuclearLicensing.DSAR\ProjectVico.V2.UI.Belgium.NuclearLicensing.DSAR.csproj" />
		<ProjectReference Include="..\ProjectVico.V2.UI.US.NRC.EnvironmentalReport\ProjectVico.V2.UI.US.NRC.EnvironmentalReport.csproj" />
		<ProjectReference Include="..\ProjectVico.V2.UI.US.NuclearLicensing\ProjectVico.V2.UI.US.NuclearLicensing.csproj" />
		<ProjectReference Include="..\ProjectVico.V2.Web.Shared\ProjectVico.V2.Web.Shared.csproj" />
