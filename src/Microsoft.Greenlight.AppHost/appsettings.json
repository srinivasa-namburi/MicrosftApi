{
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": "536870912"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.Extensions.Hosting": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Aspire.Hosting": "Information",
      "Aspire.Hosting.Dcp": "Information",
      "Microsoft.Greenlight": "Information",
      "Azure.Core": "Warning",
      "Azure.Identity": "Warning",
      "Orleans": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] "
    }
  },
  "ServiceConfiguration": {
    "GreenlightServices": {
      "Frontend": {
        "SiteName": "Generative AI for Permitting"
      },
      "Global": {
        "UseApplicationInsights": true,
        "UseAzureSqlServer": false,
        "UsePostgresMemory": false
      },
      "Scalability": {
        "UseAzureSignalR": true,
        "NumberOfValidationWorkers": "4",
        "NumberOfGenerationWorkers": "6",
        "NumberOfIngestionWorkers": "4",
        "NumberOfReviewWorkers": "4"
      },
      "FeatureFlags": {
        "EnableMassDocumentProduction": true,
        "EnableReviews": true,
        "EnableReferenceFrontend": true,
        "EnableContentReferences": true,
        "EnableExternalDataView" : false
      },
      "DocumentGeneration": {
        "DurableDevelopmentServices": true,
        "CreateBodyTextNodes": true,
        "EmitPromptAndSectionDebugFiles": false
      },
      "DocumentIngestion": {
        "ProcessTables": true,
        "ScheduledIngestion": true,
        "LocalFileStorageAvailable": false
      },
      "ReferenceIndexing": {
        "RefreshIntervalMinutes": "5"
      },
      "VectorStore": {
        "VectorSize": 1536,
        "ChunkOverlap": 200,
        "ContentReferences": {
          "GeneratedDocument": {
            "EmbeddingModelDeploymentName": "text-embedding-ada-002",
            "EmbeddingDimensionsOverride": 1536
          },
          "GeneratedSection": {
            "EmbeddingModelDeploymentName": "text-embedding-ada-002",
            "EmbeddingDimensionsOverride": 1536
          },
          "ReviewItem": {
            "EmbeddingModelDeploymentName": "text-embedding-ada-002",
            "EmbeddingDimensionsOverride": 1536
          },
          "ExternalFile": {
            "EmbeddingModelDeploymentName": "text-embedding-ada-002",
            "EmbeddingDimensionsOverride": 1536
          },
          "ExternalLinkAsset": {
            "EmbeddingModelDeploymentName": "text-embedding-ada-002",
            "EmbeddingDimensionsOverride": 1536
          }
        }
      },
      "Flow": {
        "DefaultModelDeployment": "gpt-4o",
        "MaxTokens": 4000,
        "Temperature": 0.7,
        "EnableIntentDetection": true,
        "EnableConversationalFallback": true,
        "ConversationHistoryLimit": 10,
        "SystemPrompt": "",
        "ConversationalPrompt": ""
      }
    },
    "OpenAi": {
      "GPT4128KModelDeploymentName": "gpt-4-128k",
      "GPT432KModelDeploymentName": "gpt-4-32k",
      "GPT4oModelDeploymentName": "gpt-4o",
      "EmbeddingModelDeploymentName": "text-embedding-ada-002"
    },
    "SQL": {
      "DatabaseName": "ProjectVicoDB"
    },
    "AzureAd": {
      "TrustedCallerClientIds": [""]
    }
  }
}
