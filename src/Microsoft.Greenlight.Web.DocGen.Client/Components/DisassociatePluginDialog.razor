@inject IPluginApiClient PluginApiClient
@inject ISnackbar Snackbar
@inject IDocumentProcessApiClient DocumentProcessApiClient

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" OnValidSubmit="HandleValidSubmit">
            <MudSelect @bind-Value="selectedDocumentProcessId" Label="Select Document Process" Required="true">
                @foreach (var process in _documentProcesses)
                {
                    <MudSelectItem Value="@process.Id">@process.ShortName</MudSelectItem>
                }
            </MudSelect>
            <MudButton Type="Submit" Variant="Variant.Filled" Color="Color.Primary">Disassociate</MudButton>
        </MudForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public DynamicPluginInfo Plugin { get; set; }
    private List<DocumentProcessInfo> _documentProcesses = new();
    private Guid selectedDocumentProcessId;
    private MudForm form;

    protected override async Task OnInitializedAsync()
    {
        _documentProcesses = await DocumentProcessApiClient.GetAllDocumentProcessInfoAsync();
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            await PluginApiClient.DisassociatePluginFromDocumentProcessAsync(Plugin.Id, selectedDocumentProcessId);
            Snackbar.Add("Plugin disassociated successfully.", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error disassociating plugin: {ex.Message}", Severity.Error);
        }
    }
}