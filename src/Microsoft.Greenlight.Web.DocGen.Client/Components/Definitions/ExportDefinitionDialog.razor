@using System.Text.Json
@inject IDefinitionsApiClient DefinitionsApiClient
@inject IJSRuntime JSRuntime

<MudDialog MaxWidth="MaxWidth.Small" FullWidth="true">
    <TitleContent>
        <MudText Typo="Typo.h6">Export Definition</MudText>
    </TitleContent>
    <DialogContent>
        @if (ProcessId.HasValue)
        {
            <MudText Typo="Typo.subtitle2">What do you want to include?</MudText>
            <MudCheckBox @bind-Checked="IncludeOutline" Label="Document Outline" />
            <MudCheckBox @bind-Checked="IncludeMetadata" Label="Metadata Fields" />
            <MudCheckBox @bind-Checked="IncludePrompts" Label="Prompts" />
        }
        else if (LibraryId.HasValue)
        {
            <MudText Typo="Typo.subtitle2">Exporting Document Library definition</MudText>
            <MudText Typo="Typo.caption" Color="Color.Secondary">No additional options are required.</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ExportAsync">Export</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = default!;

    // Either ProcessId or LibraryId should be set
    [Parameter] public Guid? ProcessId { get; set; }
    [Parameter] public Guid? LibraryId { get; set; }
    [Parameter] public string? SuggestedFileName { get; set; }

    private bool IncludeOutline { get; set; } = true;
    private bool IncludeMetadata { get; set; } = true;
    private bool IncludePrompts { get; set; } = true;

    private async Task ExportAsync()
    {
        if (ProcessId.HasValue)
        {
            var pkg = await DefinitionsApiClient.ExportProcessAsync(ProcessId.Value);
            if (pkg is null)
            {
                MudDialog.Close(DialogResult.Ok(false));
                return;
            }
            if (!IncludeOutline) pkg.Outline = null;
            if (!IncludeMetadata) pkg.MetaDataFields = null;
            if (!IncludePrompts) pkg.Prompts = null;

            var json = JsonSerializer.Serialize(pkg, new JsonSerializerOptions { WriteIndented = true });
            var fileName = string.IsNullOrWhiteSpace(SuggestedFileName) ? $"process-{pkg.ShortName}.json" : SuggestedFileName;
            await JSRuntime.InvokeVoidAsync("downloadFileFromText", fileName, json, "application/json;charset=utf-8");
            MudDialog.Close(DialogResult.Ok(true));
        }
        else if (LibraryId.HasValue)
        {
            var pkg = await DefinitionsApiClient.ExportLibraryAsync(LibraryId.Value);
            if (pkg is null)
            {
                MudDialog.Close(DialogResult.Ok(false));
                return;
            }
            var json = JsonSerializer.Serialize(pkg, new JsonSerializerOptions { WriteIndented = true });
            var fileName = string.IsNullOrWhiteSpace(SuggestedFileName) ? $"library-{pkg.ShortName}.json" : SuggestedFileName;
            await JSRuntime.InvokeVoidAsync("downloadFileFromText", fileName, json, "application/json;charset=utf-8");
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            MudDialog.Cancel();
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
