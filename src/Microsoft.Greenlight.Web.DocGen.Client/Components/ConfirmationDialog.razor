<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Close" Color="Color.Secondary">@CancelButtonText</MudButton>
        <MudButton OnClick="@Confirm" Color="Color.Primary">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public string ContentText { get; set; }
    [Parameter] public string ButtonText { get; set; } = "OK";
    [Parameter] public string CancelButtonText { get; set; } = "Cancel";
    [Parameter] public Color DialogColor { get; set; } = Color.Default;

    void Close() => MudDialog.Cancel();
    void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}