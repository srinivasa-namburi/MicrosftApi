@inject IPluginApiClient PluginApiClient
@inject ISnackbar Snackbar
@inject IDocumentProcessApiClient DocumentProcessApiClient

<MudDialog>
    <DialogContent>
        <MudForm @ref="form">
            <MudSelect T="Guid" @bind-Value="selectedDocumentProcessId" Label="Select Document Process" Required="true">
                @foreach (var process in _documentProcesses)
                {
                    <MudSelectItem Value="@process.Id">@process.ShortName</MudSelectItem>
                }
            </MudSelect>

            <MudSelect T="McpPluginVersionInfo?" @bind-Value="selectedPluginVersion" Label="Select Plugin Version" Required="true" Disabled="keepOnLatestVersion">
                @foreach (var version in Plugin?.Versions?.OrderByDescending(v => v.Major).ThenByDescending(v => v.Minor).ThenByDescending(v => v.Patch) ?? Enumerable.Empty<McpPluginVersionInfo>())
                {
                    <MudSelectItem Value="@version">@version.ToString()</MudSelectItem>
                }
            </MudSelect>

            <MudCheckBox @bind-Value="keepOnLatestVersion" Label="Keep on latest version" Class="mt-2" />

            <MudButton Class="mt-4" Variant="Variant.Filled" Color="Color.Primary" OnClick="HandleValidSubmit">Associate</MudButton>
        </MudForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public McpPluginInfo Plugin { get; set; } = new();
    private List<DocumentProcessInfo> _documentProcesses = new();
    private Guid selectedDocumentProcessId;
    private McpPluginVersionInfo? selectedPluginVersion;
    private MudForm form;
    private bool keepOnLatestVersion = false;

    protected override async Task OnInitializedAsync()
    {
        _documentProcesses = await DocumentProcessApiClient.GetAllDocumentProcessInfoAsync();
        selectedPluginVersion = Plugin.LatestVersion;
    }

    private async Task HandleValidSubmit()
    {
        if (!keepOnLatestVersion && selectedPluginVersion == null)
        {
            Snackbar.Add("Please select a plugin version.", Severity.Error);
            return;
        }

        try
        {
            var versionToAssociate = keepOnLatestVersion ? Plugin.LatestVersion : selectedPluginVersion;
            if (versionToAssociate == null)
            {
                Snackbar.Add("No valid version selected.", Severity.Error);
                return;
            }
            await PluginApiClient.AssociateMcpPluginWithDocumentProcessAsync(Plugin.Id, selectedDocumentProcessId, versionToAssociate, keepOnLatestVersion);
            Snackbar.Add($"Plugin '{Plugin.Name}' associated successfully.", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error associating plugin: {ex.Message}", Severity.Error);
        }
    }
}