@inject IPluginApiClient PluginApiClient
@inject ISnackbar Snackbar
@inject IDocumentProcessApiClient DocumentProcessApiClient

<MudDialog>
    <DialogContent>
        <MudForm @ref="form">
            <MudSelect T="Guid" @bind-Value="selectedDocumentProcessId" Label="Select Document Process" Required="true">
                @foreach (var process in _documentProcesses)
                {
                    <MudSelectItem Value="@process.Id">@process.ShortName</MudSelectItem>
                }
            </MudSelect>
            <MudButton Class="mt-4" Variant="Variant.Filled" Color="Color.Primary" OnClick="HandleValidSubmit">Disassociate</MudButton>
        </MudForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public McpPluginInfo Plugin { get; set; }
    private List<DocumentProcessInfo> _documentProcesses = new();
    private Guid selectedDocumentProcessId;
    private MudForm form;

    protected override async Task OnInitializedAsync()
    {
        _documentProcesses = await DocumentProcessApiClient.GetAllDocumentProcessInfoAsync();
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            await PluginApiClient.DisassociateMcpPluginFromDocumentProcessAsync(Plugin.Id, selectedDocumentProcessId);
            Snackbar.Add("MCP plugin disassociated successfully.", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error disassociating MCP plugin: {ex.Message}", Severity.Error);
        }
    }
}