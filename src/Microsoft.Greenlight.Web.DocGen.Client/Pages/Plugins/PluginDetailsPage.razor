@page "/plugins/{PluginId:guid}"

@inject IPluginApiClient PluginApiClient
@inject ISnackbar Snackbar
@inject NavigationManager NavigationManager
@inject IDialogService DialogService

<MudContainer Class="mt-4">
    @if (_isLoading)
    {
        <MudProgressCircular Indeterminate="true" Size="Size.Large" Class="mt-4" />
        <MudText Class="mt-2">Loading plugin details...</MudText>
    }
    else if (_plugin == null)
    {
        <MudAlert Severity="Severity.Error">Plugin not found.</MudAlert>
        <MudButton Class="mt-4" OnClick="GoBack" Variant="Variant.Filled" Color="Color.Secondary">
            Go Back
        </MudButton>
    }
    else
    {
        <MudPaper Class="pa-4 mb-4">
            <MudGrid>
                <MudItem xs="12">
                    <div class="d-flex justify-space-between align-center">
                        <MudText Typo="Typo.h4">@_plugin.Name</MudText>
                        <div>
                            <MudTooltip Text="Edit Plugin">
                                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary"
                                             OnClick="EditPlugin" />
                            </MudTooltip>
                            <MudTooltip Text="Delete Plugin">
                                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error"
                                             OnClick="ConfirmDeletePlugin" />
                            </MudTooltip>
                            <MudTooltip Text="Return to Plugins List">
                                <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" OnClick="GoBack" />
                            </MudTooltip>
                        </div>
                    </div>
                </MudItem>
                
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1">Description</MudText>
                    <MudText>@(_plugin.Description ?? "No description provided.")</MudText>
                </MudItem>
                
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle1">Source Type</MudText>
                    <MudChip Color="@GetSourceTypeColor(_plugin.SourceType)">@_plugin.SourceType</MudChip>
                </MudItem>
                
                <MudItem xs="12">
                    <MudText Typo="Typo.h5">Versions</MudText>
                    <MudTable Items="@_plugin.Versions.OrderByDescending(v => v.Major).ThenByDescending(v => v.Minor).ThenByDescending(v => v.Patch)" 
                             Hover="true" Striped="true">
                        <HeaderContent>
                            <MudTh>Version</MudTh>
                            <MudTh>Command</MudTh>
                            <MudTh>Arguments</MudTh>
                            <MudTh>Environment Variables</MudTh>
                            <MudTh>Actions</MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd>@context.ToString()</MudTd>
                            <MudTd>@context.Command</MudTd>
                            <MudTd>
                                @if (context.Arguments != null && context.Arguments.Any())
                                {
                                    <MudText>@string.Join(", ", context.Arguments)</MudText>
                                }
                                else
                                {
                                    <MudText Typo="Typo.caption">None</MudText>
                                }
                            </MudTd>
                            <MudTd>
                                @if (context.EnvironmentVariables != null && context.EnvironmentVariables.Any())
                                {
                                    <MudChip Size="Size.Small">@context.EnvironmentVariables.Count variables</MudChip>
                                }
                                else
                                {
                                    <MudText Typo="Typo.caption">None</MudText>
                                }
                            </MudTd>
                            <MudTd>
                                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary"
                                             Size="Size.Small" OnClick="() => EditVersion(context)" />
                            </MudTd>
                        </RowTemplate>
                    </MudTable>
                    
                    <MudButton Class="mt-3" Variant="Variant.Filled" Color="Color.Primary"
                             OnClick="AddVersion">Add Version</MudButton>
                </MudItem>
            </MudGrid>
        </MudPaper>
        
        <PluginDocumentProcessAssociationManager PluginId="@PluginId" 
                                               PluginCentric="true"
                                               Title="Associated Document Processes"
                                               SelectionColumnLabel="Document Process"
                                               OnAssociationChanged="HandleAssociationChanged" />
    }
</MudContainer>

@code {
    [Parameter] public Guid PluginId { get; set; }
    
    private McpPluginInfo? _plugin;
    private bool _isLoading = true;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadPlugin();
    }
    
    protected override async Task OnParametersSetAsync()
    {
        if (PluginId != Guid.Empty)
        {
            await LoadPlugin();
        }
    }
    
    private async Task LoadPlugin()
    {
        _isLoading = true;
        try
        {
            _plugin = await PluginApiClient.GetMcpPluginByIdAsync(PluginId);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading plugin: {ex.Message}", Severity.Error);
            _plugin = null;
        }
        finally
        {
            _isLoading = false;
        }
    }
    
    private Color GetSourceTypeColor(string sourceType)
    {
        return sourceType switch
        {
            "CommandOnly" => Color.Secondary,
            "AzureBlobStorage" => Color.Primary,
            _ => Color.Default
        };
    }
    
    private async Task HandleAssociationChanged()
    {
        // Refresh the plugin data to reflect the updated associations
        await LoadPlugin();
        StateHasChanged();
    }
    
    private void EditPlugin()
    {
        var parameters = new DialogParameters
        {
            { "Plugin", _plugin },
            { "IsNewPlugin", false }
        };
        
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = DialogService.Show<EditMcpPluginDialog>("Edit Plugin", parameters, options);
        
        dialog.Result.ContinueWith(async result =>
        {
            if (!result.Result.Cancelled)
            {
                await LoadPlugin();
                StateHasChanged();
            }
        });
    }
    
    private void EditVersion(McpPluginVersionInfo version)
    {
        var parameters = new DialogParameters 
        { 
            { "Version", version },
            { "PluginInfo", _plugin },
            { "IsNewVersion", false }
        };
        
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = DialogService.Show<EditMcpPluginVersionDialog>($"Edit Version - {version}", parameters, options);
        
        dialog.Result.ContinueWith(async result =>
        {
            if (!result.Result.Cancelled)
            {
                await LoadPlugin();
                StateHasChanged();
            }
        });
    }
    
    private void AddVersion()
    {
        var parameters = new DialogParameters 
        { 
            { "PluginInfo", _plugin },
            { "IsNewVersion", true }
        };
        
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = DialogService.Show<EditMcpPluginVersionDialog>("Add New Version", parameters, options);
        
        dialog.Result.ContinueWith(async result =>
        {
            if (!result.Result.Cancelled)
            {
                await LoadPlugin();
                StateHasChanged();
            }
        });
    }
    
    private void ConfirmDeletePlugin()
    {
        if (_plugin == null) return;
        
        var parameters = new DialogParameters
        {
            { "ContentText", $"Are you sure you want to delete the plugin '{_plugin.Name}'? This action cannot be undone." },
            { "ButtonText", "Delete" },
            { "Color", Color.Error }
        };

        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = DialogService.Show<ConfirmationDialog>("Delete Plugin", parameters, options);

        dialog.Result.ContinueWith(async result =>
        {
            if (!result.Result.Cancelled)
            {
                await DeletePlugin();
            }
        });
    }
    
    private async Task DeletePlugin()
    {
        try
        {
            await PluginApiClient.DeleteMcpPluginAsync(PluginId);
            Snackbar.Add("Plugin deleted successfully.", Severity.Success);
            GoBack();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error deleting plugin: {ex.Message}", Severity.Error);
        }
    }
    
    private void GoBack()
    {
        NavigationManager.NavigateTo("/plugins");
    }
}