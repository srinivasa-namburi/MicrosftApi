@page "/plugins"
@using Microsoft.Greenlight.Shared.Contracts.DTO.Plugins
@using Microsoft.Greenlight.Web.Shared.ServiceClients
@using Microsoft.Greenlight.Web.DocGen.Client.Components

@inject IPluginApiClient PluginApiClient
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject NavigationManager NavigationManager

<MudPaper Class="pa-6">
    <MudText Typo="Typo.h5">MCP Plugins</MudText>
    <MudDivider Class="mt-2 mb-5" />
    
    <MudGrid Class="mb-4">
        <MudItem xs="6" sm="4" md="3">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ShowUploadPluginDialog" 
                     StartIcon="@Icons.Material.Filled.CloudUpload" FullWidth="true">
                Upload MCP Plugin
            </MudButton>
        </MudItem>
        <MudItem xs="6" sm="4" md="3">
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="ShowCreatePluginDialog" 
                     StartIcon="@Icons.Material.Filled.Add" FullWidth="true">
                Create Plugin
            </MudButton>
        </MudItem>
    </MudGrid>
    
    @if (_isLoading)
    {
        <MudProgressCircular Indeterminate="true" Size="Size.Large" Class="ma-4" />
    }
    else
    {
        <MudTable T="McpPluginInfo" Items="_plugins" Hover="true" Striped="true" Dense="true" 
                 Filter="new Func<McpPluginInfo, bool>(FilterPlugin)" 
                 @bind-RowsPerPage="_rowsPerPage">
            <ToolBarContent>
                <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" 
                             AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" 
                             Class="mt-0" Immediate="true" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Plugin Name</MudTh>
                <MudTh>Description</MudTh>
                <MudTh>Latest Version</MudTh>
                <MudTh>Source Type</MudTh>
                <MudTh>Versions</MudTh>
                <MudTh>Expose to Flow</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Plugin Name">
                    <MudLink Href="@($"plugins/{context.Id}")">@context.Name</MudLink>
                </MudTd>
                <MudTd DataLabel="Description">@(context.Description ?? "No description")</MudTd>
                <MudTd DataLabel="Latest Version">@(context.LatestVersion?.ToString() ?? "N/A")</MudTd>
                <MudTd DataLabel="Source Type">
                    <MudChip T="string" Size="Size.Small" Color="@GetSourceTypeColor(context.SourceType)">@context.SourceType</MudChip>
                </MudTd>
                <MudTd DataLabel="Versions">
                    <MudChip T="string" Size="Size.Small">@context.Versions.Count</MudChip>
                </MudTd>
                <MudTd DataLabel="Expose to Flow">
                    <MudCheckBox T="bool" Value="@context.ExposeToFlow"
                               ValueChanged="@(async (bool newValue) => await ToggleExposeToFlow(context, newValue))"
                               Color="Color.Primary" />
                </MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" 
                                 OnClick="() => EditPlugin(context)" Size="Size.Small" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" 
                                 OnClick="() => ConfirmDeletePlugin(context)" Size="Size.Small" />
                    <MudIconButton Icon="@Icons.Material.Filled.OpenInNew" Color="Color.Default" 
                                 OnClick="() => ViewPluginDetails(context)" Size="Size.Small" />
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
            <NoRecordsContent>
                <MudText>No plugins found</MudText>
            </NoRecordsContent>
        </MudTable>
    }
</MudPaper>

@code {
    private List<McpPluginInfo> _plugins = new();
    private bool _isLoading = true;
    private string _searchString = "";
    private int _rowsPerPage = 10;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadPlugins();
    }
    
    private async Task LoadPlugins()
    {
        _isLoading = true;
        try
        {
            _plugins = await PluginApiClient.GetAllMcpPluginsAsync() ?? new List<McpPluginInfo>();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading plugins: {ex.Message}", Severity.Error);
            _plugins = new List<McpPluginInfo>();
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }
    
    private bool FilterPlugin(McpPluginInfo plugin)
    {
        if (string.IsNullOrWhiteSpace(_searchString))
            return true;
            
        return plugin.Name.Contains(_searchString, StringComparison.OrdinalIgnoreCase)
            || (plugin.Description?.Contains(_searchString, StringComparison.OrdinalIgnoreCase) ?? false);
    }
    
    private Color GetSourceTypeColor(string sourceType)
    {
        return sourceType switch
        {
            "CommandOnly" => Color.Secondary,
            "AzureBlobStorage" => Color.Primary,
            "SSE" => Color.Tertiary,
            _ => Color.Default
        };
    }
    
    private void ShowUploadPluginDialog()
    {
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = DialogService.Show<UnifiedPluginDialog>("Upload MCP Plugin", options);
        
        dialog.Result.ContinueWith(async result =>
        {
            if (!result.Result.Canceled)
            {
                await LoadPlugins();
                StateHasChanged();
            }
        });
    }
    
    private void ShowCreatePluginDialog()
    {
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = DialogService.Show<CreateMcpPluginDialog>("Create Plugin", options);
        
        dialog.Result.ContinueWith(async result =>
        {
            if (!result.Result.Canceled)
            {
                await LoadPlugins();
                StateHasChanged();
            }
        });
    }
    
    private void EditPlugin(McpPluginInfo plugin)
    {
        var parameters = new DialogParameters
        {
            { "Plugin", plugin },
            { "IsNewPlugin", false }
        };
        
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = DialogService.Show<EditMcpPluginDialog>("Edit Plugin", parameters, options);
        
        dialog.Result.ContinueWith(async result =>
        {
            if (!result.Result.Canceled)
            {
                await LoadPlugins();
                StateHasChanged();
            }
        });
    }
    
    private void ConfirmDeletePlugin(McpPluginInfo plugin)
    {
        var parameters = new DialogParameters
        {
            { "ContentText", $"Are you sure you want to delete the plugin '{plugin.Name}'? This action cannot be undone." },
            { "ButtonText", "Delete" },
            { "DialogColor", Color.Error }
        };

        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = DialogService.Show<ConfirmationDialog>("Delete Plugin", parameters, options);

        dialog.Result.ContinueWith(async result =>
        {
            if (!result.Result.Canceled)
            {
                await DeletePlugin(plugin);
            }
        });
    }
    
    private async Task DeletePlugin(McpPluginInfo plugin)
    {
        try
        {
            await PluginApiClient.DeleteMcpPluginAsync(plugin.Id);
            Snackbar.Add($"Plugin '{plugin.Name}' deleted successfully.", Severity.Success);
            await LoadPlugins();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error deleting plugin: {ex.Message}", Severity.Error);
        }
    }
    
    private void ViewPluginDetails(McpPluginInfo plugin)
    {
        NavigationManager.NavigateTo($"/plugins/{plugin.Id}");
    }

    private async Task ToggleExposeToFlow(McpPluginInfo plugin, bool newValue)
    {
        var errorMessage = await PluginApiClient.UpdateExposeToFlowAsync(plugin.Id, newValue);

        if (errorMessage == null)
        {
            // Success - update the local state
            plugin.ExposeToFlow = newValue;
            var action = newValue ? "enabled" : "disabled";
            Snackbar.Add($"Flow integration {action} for plugin '{plugin.Name}'.", Severity.Success);
        }
        else
        {
            // Error - show the error message and keep the checkbox at its original state
            Snackbar.Add(errorMessage, Severity.Error);
            StateHasChanged(); // Force re-render to reset checkbox
        }
    }
}
