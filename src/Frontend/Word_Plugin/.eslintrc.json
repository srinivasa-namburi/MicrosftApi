{
  "plugins": [
    "jsdoc",
    "office-addins"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:jsdoc/recommended",
    "airbnb",
    "airbnb-typescript",
    "plugin:office-addins/react"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "Office": "readonly",
    "process": "readonly"
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/function-component-definition": [
      "error",
      {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function"
      }
    ],
    "@typescript-eslint/quotes": [
      "error",
      "double"
    ],
    "@typescript-eslint/switch-exhaustiveness-check": "error",
    "import/prefer-default-export": "off", // Allow named exports even if they're the only export
    "jsdoc/require-hyphen-before-param-description": "error",
    "jsdoc/require-param-type": "off", // TS already requires param types
    "jsdoc/require-returns-type": "off", // TS already requires param types
    "default-case": [
      "error",
      {
        "commentPattern": "^no default( - .*)?$" // Allow for reasons to be documented
      }
    ],
    "consistent-return": "off", // Handled by TS noImplicitReturns
    "max-classes-per-file": "off", // Sometimes it's useful to have multiple related classes in a file
    "max-len": "off",
    "no-console": "off", // TODO: use a logger instead and remove this rule
    "no-continue": 0,
    "no-param-reassign": "off",
    "no-restricted-syntax": "off",
    "no-undef": "off",
    "brace-style": "off"
  }
}