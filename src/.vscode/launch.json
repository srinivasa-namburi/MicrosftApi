{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "WebAPI",
      "type": "coreclr",
      "preLaunchTask": "build (ProjectVicoWebApi)",
      "request": "launch",
      "program": "${workspaceFolder}/Frontend/webapi/bin/Debug/net6.0/ProjectVico.Frontend.API.dll",
      "cwd": "${workspaceFolder}/Frontend/webapi",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "copilot"
      }
    },
    {
      "name": "WebApp",
      "type": "node-terminal",
      "preLaunchTask": "build (ProjectVicoChat)",
      "request": "launch",
      "cwd": "${workspaceFolder}/Frontend/webapp",
      "command": "yarn start",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "copilot"
      }
    },
    {
      "name": "ProjectVico.Plugins.GeographicalData",
      "type": "coreclr",
      "preLaunchTask": "build (ProjectVico.Plugins.GeographicalData)",
      "request": "launch",
      "program": "${workspaceFolder}/Plugins/ProjectVico.Plugins.GeographicalData/bin/Debug/net6.0/ProjectVico.Plugins.GeographicalData.dll",
      "cwd": "${workspaceFolder}/Plugins/ProjectVico.Plugins.GeographicalData",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "name": "ProjectVico.Plugins.DocQnA",
      "type": "coreclr",
      "preLaunchTask": "build (ProjectVico.Plugins.DocQnA)",
      "request": "launch",
      "program": "${workspaceFolder}/Plugins/ProjectVico.Plugins.DocQnA/bin/Debug/net6.0/ProjectVico.Plugins.DocQnA.dll",
      "cwd": "${workspaceFolder}/Plugins/ProjectVico.Plugins.DocQnA",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "presentation": {
        "reveal": "never"
      }
    }
  ],
  "compounds": [
    {
      "presentation": {
        "hidden": false,
        "group": "copilot",
        "order": 2
      },
      "name": "WebAPI & WebApp",
      "configurations": ["WebAPI", "WebApp"]
    },
    {
      "presentation": {
        "hidden": false,
        "group": "copilot",
        "order": 1
      },
      "name": "WebAPI, WebApp & All Plugins",
      "configurations": [
        "WebAPI",
        "WebApp",
        // "ProjectVico.Plugins.DocQnA",
        "ProjectVico.Plugins.GeographicalData"
      ]
    }
  ]
}
