{
  "version": "2.0.0",
  "tasks": [
    // ProjectVicoChat
    {
      "label": "run (ProjectVicoChat)",
      "detail": "Run all ProjectVicoChat components",
      "group": "test",
      "dependsOn": ["run (ProjectVicoWebApi)", "run (ProjectVicoChat)"],
      "dependsOrder": "parallel"
    },
    // Copilot Setup
    {
      "label": "install (ProjectVicoChat)",
      "detail": "Install all ProjectVicoChat app dependencies",
      "type": "shell",
      "group": "build",
      "command": "yarn",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "showReuseMessage": false,
        "panel": "shared",
        "group": "buildTasks"
      },
      "options": {
        "cwd": "${workspaceFolder}/Frontend/webapp"
      },
      "problemMatcher": []
    },
    {
      "label": "setup (ProjectVicoChat)",
      "detail": "Setup (like setting secrets) for ProjectVicoChat app and api",
      "group": "test",
      "dependsOn": ["GetSecret (AIService:Key)"],
      "dependsOrder": "sequence"
      // TODO -- add tasks for configuring environment variables
    },
    {
      "label": "GetSecret (AIService:Key)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "user-secrets",
        "set",
        "AIService:Key",
        "${input:aiServiceSecret}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/Frontend/webapi"
      }
    },
    // ProjectVicoChat App
    {
      "label": "build (ProjectVicoChat)",
      "type": "shell",
      "group": "build",
      "command": "yarn build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "group": "buildTasks"
      },
      "options": {
        "cwd": "${workspaceFolder}/Frontend/webapp"
      },
      "problemMatcher": []
    },
    {
      "label": "run (ProjectVicoChat)",
      "type": "shell",
      "group": "test",
      "command": "yarn start",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "copilot"
      },
      "options": {
        "cwd": "${workspaceFolder}/Frontend/webapp"
      }
    },
    // ProjectVicoWebApi
    {
      "label": "build (ProjectVicoWebApi)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Frontend/webapi/ProjectVico.Frontend.API.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "/property:DebugType=portable"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "run (ProjectVicoWebApi)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/Frontend/webapi/ProjectVico.Frontend.API.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "copilot"
      }
    },
    {
      "label": "watch (ProjectVicoWebApi)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Frontend/webapi/ProjectVico.Frontend.API.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build (ProjectVicoChat)",
      "type": "shell",
      "group": "build",
      "command": "yarn build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "group": "buildTasks"
      },
      "options": {
        "cwd": "${workspaceFolder}/Frontend/webapp"
      },
      "problemMatcher": []
    },
    {
      "label": "run (ProjectVicoChat)",
      "type": "shell",
      "group": "test",
      "command": "yarn start",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "copilot"
      },
      "options": {
        "cwd": "${workspaceFolder}/Frontend/webapp"
      }
    },
    // ProjectVico.Plugins.GeographicalData
    {
      "label": "build (ProjectVico.Plugins.GeographicalData)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Plugins/ProjectVico.Plugins.GeographicalData/ProjectVico.Plugins.GeographicalData.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "/property:DebugType=portable"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "run (ProjectVico.Plugins.GeographicalData)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/Plugins/ProjectVico.Plugins.GeographicalData/ProjectVico.Plugins.GeographicalData.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "copilot"
      }
    },
    {
      "label": "watch (ProjectVico.Plugins.GeographicalData)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Plugins/ProjectVico.Plugins.GeographicalData/ProjectVico.Plugins.GeographicalData.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    // ProjectVico.Plugins.GeographicalData
    {
      "label": "build (ProjectVico.Plugins.DocQnA)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Plugins/ProjectVico.Plugins.GeographicalData/ProjectVico.Plugins.DocQnA.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary",
        "/property:DebugType=portable"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "run (ProjectVico.Plugins.DocQnA)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/Plugins/ProjectVico.Plugins.GeographicalData/ProjectVico.Plugins.DocQnA.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "copilot"
      }
    },
    {
      "label": "watch (ProjectVico.Plugins.DocQnA)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Plugins/ProjectVico.Plugins.GeographicalData/ProjectVico.Plugins.DocQnA.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    }
  ],
  "inputs": [
    {
      "id": "aiServiceSecret",
      "type": "promptString",
      "default": "",
      "description": "Enter a secret for ProjectVicoChat AIService:Key",
      "password": true
    }
  ]
}
