@inherits LayoutComponentBase
@using ProjectVico.V2.Web.DocGen.Components

<MyMudThemeProvider IsDarkMode="@_isDarkMode" />
<MyMudProviders />

<MudLayout>
    <MudAppBar Elevation="3">
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        @* <MudSpacer /> *@
        <MudSwitch @bind-Checked="@_isDarkMode" Color="Color.Primary" Class="ma-1" T="bool" ThumbIcon="@Icons.Material.Filled.WbSunny" />
        @* <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" Link="https://mudblazor.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor/" Target="_blank" /> *@
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="3">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Project Vico v2</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    private bool _isDarkMode;
    
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
   
}